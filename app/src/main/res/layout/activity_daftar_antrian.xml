<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/bacgound"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".home_feature.Daftar_Antrian">


    <androidx.cardview.widget.CardView
            android:background="@drawable/edit_background"
            android:id="@+id/cardview"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <RelativeLayout

                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="56dp"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/relativeLayout2">


            <TextView
                    android:layout_centerHorizontal="true"
                    android:text="Dapatkan Nomor Antrean Disini"
                    android:textSize="@dimen/_16sdp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints" tools:layout_editor_absoluteX="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardview">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/textViewNamaLengkap1"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    android:text="Nama Lengkap"/>

            <EditText
                    android:id="@+id/editTextNamaLengkap1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:inputType="text"
                    android:textSize="20sp"
                    android:background="@drawable/edit_background"
                    android:padding="8dp"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/textpelayanan"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    android:text="Pelayanan"/>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/pelayanan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                        android:inputType="none"
                        android:id="@+id/dropdon"
                        android:background="@drawable/edit_background"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>


            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/textViewNoTlp"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    android:text="Nomer Telepon"/>

            <EditText
                    android:id="@+id/editTextNoTlp1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:inputType="number"
                    android:textSize="20sp"
                    android:background="@drawable/edit_background"
                    android:padding="8dp"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/textViewhari"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    android:text="Hari/ Tanggal"/>

            <EditText
                    android:id="@+id/editTextharitanggal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:inputType="textPassword"
                    android:textSize="20sp"
                    android:background="@drawable/edit_background"
                    android:padding="8dp"/>

        </LinearLayout>

        <Button
                android:id="@+id/buttonpelayanan"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:text="Daftar"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>