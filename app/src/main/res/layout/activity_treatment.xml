<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/bacgound"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".home_feature.Treatment">

    <androidx.cardview.widget.CardView
            android:background="@drawable/edit_background"
            android:id="@+id/cardview133"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <RelativeLayout

                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="56dp"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/relativeLayout2">


            <TextView
                    android:layout_centerHorizontal="true"
                    android:text="Daftar Treatment Anda"
                    android:textSize="@dimen/_16sdp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
            android:layout_margin="10dp"
            android:background="@drawable/edit_background"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/cardview133" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="4dp"
            app:layout_constraintVertical_bias="0.221">

        <ImageView
                android:layout_marginTop="100dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/gigi"
                android:id="@+id/imageViewtreatmen"/>
        <TextView
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/imageViewtreatmen"
                android:text="Belum Ada Treatment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"/>
        <TextView
                android:layout_marginBottom="@dimen/_100sdp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/textView14"
                android:text="Kamu belum memiliki Treatment untuk ditampilkan, silahkan konsultasi dengan dokter jika kamu membutuhkan treatment ini"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/textView15"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>