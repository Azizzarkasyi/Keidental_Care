<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:padding="20dp"
        android:background="@drawable/bacgound"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".home_feature.Konsultasi">

    <androidx.cardview.widget.CardView
            android:background="@drawable/edit_background"
            android:id="@+id/cardview133"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <RelativeLayout

                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="56dp"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/relativeLayout2">


            <TextView
                    android:layout_centerHorizontal="true"
                    android:text="Konsultasi"
                    android:textSize="@dimen/_16sdp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
            android:padding="30dp"
            android:orientation="vertical"
            android:background="@drawable/bgcardhome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/cardview133">
        <ImageView
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/fotodokter"
                android:id="@+id/imageView2"/>
        <TextView
                android:layout_marginTop="20dp"
                android:fontFamily="@font/inter_medium"
                android:textSize="16dp"
                android:text="Drg.  Rima Yunita.R"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"/>
        <TextView
                android:layout_marginTop="5dp"
                android:fontFamily="@font/inter_medium"
                android:textColor="#9E9B9B"
                android:textSize="15dp"
                android:text="Dokter GIgi Umum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"/>

        <Button

                android:id="@+id/buttonkonsultasi"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:text="Chat"
                android:textSize="20dp"
                android:layout_marginTop="200dp"
                android:textStyle="bold"
                android:layout_gravity="center"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>