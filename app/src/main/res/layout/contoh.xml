<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/bacgound"
    android:layout_height="match_parent"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:background="@color/hijau" />

        <androidx.cardview.widget.CardView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_50sdp"
            app:cardCornerRadius="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="13dp">

                <ImageView
                    android:src="@drawable/potoprofil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/namaUserJa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_toEndOf="@+id/imageView"
                        android:text="Diana Cantika Dewi"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:id="@+id/emailUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_toEndOf="@+id/imageView"
                        android:text="dianacan16@gmail.com"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        tools:ignore="RtlCompat" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="50dp"
        android:paddingBottom="40dp"
      android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/bgcardhome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.088"
        app:layout_constraintHorizontal_bias="0.4">

        <TextView
            android:fontFamily="@font/inter_bold"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text=" Jadwal Kunjungan Kamu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"/>
        <View
            android:id="@+id/sparator"
            android:layout_below="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>
        <TextView
            android:fontFamily="@font/inter"
            android:textSize="12sp"
            android:id="@+id/kunjunganText"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_below="@+id/sparator"
            android:text="Rabu, 15 November 2023, di klinik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />


        <TextView
            android:fontFamily="@font/inter"
            android:textSize="14sp"
            android:id="@+id/pukulRiwayat"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:text="Pukul 16.00 WIB"
            android:layout_below="@+id/kunjunganText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          />
    </RelativeLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>