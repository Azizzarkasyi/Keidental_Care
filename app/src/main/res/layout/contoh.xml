<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:background="@drawable/bacgound"
    android:layout_height="match_parent"
>
    <androidx.cardview.widget.CardView
        android:background="@drawable/edit_background"
        android:id="@+id/cardview133"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <RelativeLayout

            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="56dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/relativeLayout2">


            <TextView
                android:layout_centerHorizontal="true"
                android:text="Detail Dokter"
                android:textSize="@dimen/_16sdp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:paddingBottom="40dp"
        android:background="@drawable/bgcardhome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardview133"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.088"
        app:layout_constraintHorizontal_bias="0.4">

        <TextView
            android:fontFamily="@font/inter_bold"
            android:textSize="15dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text=" Jadwal Kunjungan Kamu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"/>
        <View
            android:id="@+id/sparator"
            android:layout_below="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>
        <TextView
            android:fontFamily="@font/inter"
            android:textSize="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_below="@+id/sparator"
            android:text="Rabu, 15 November 2023, di klinik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"/>
        <TextView
            android:fontFamily="@font/inter"
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:text="Kei Dental Care"
            android:layout_below="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview10"/>


        <TextView
            android:fontFamily="@font/inter"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:text="Pukul 16.00 WIB"
            android:layout_below="@+id/textview10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/jadwal_praktek"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>